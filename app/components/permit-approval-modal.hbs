{{#if @isOpen}}
  <div class="modal-overlay" {{on "click" this.closeModal}}>
    <div class="approval-modal" {{on "click" this.preventModalClose}}>
      <div class="modal-header">
        <h3>Department Review - {{this.userDepartment}} Department</h3>
        <button class="close-button" {{on "click" this.closeModal}}>×</button>
      </div>
      
      <div class="modal-body">
        <div class="permit-info">
          <h4>Permit Information</h4>
          <div class="permit-details">
            <div class="detail-item">
              <span class="label">Permit Type:</span>
              <span class="value">{{this.permitType}}</span>
            </div>
            <div class="detail-item">
              <span class="label">Permit Number:</span>
              <span class="value">{{@permit.permitNumber}}</span>
            </div>
            <div class="detail-item">
              <span class="label">Applicant:</span>
              <span class="value">{{#if @permit.applicant}}{{#if @permit.applicant.name}}{{@permit.applicant.name}}{{else}}Not specified{{/if}}{{else}}Not specified{{/if}}</span>
            </div>
            <div class="detail-item">
              <span class="label">Property Address:</span>
              <span class="value">{{#if @permit.property}}{{#if @permit.property.street}}{{@permit.property.street}}, {{@permit.property.city}}, {{@permit.property.state}} {{@permit.property.zip}}{{else}}Not specified{{/if}}{{else}}Not specified{{/if}}</span>
            </div>
          </div>
        </div>
        
        <div class="review-checklist">
          <h4>Review Checklist</h4>
          
          {{#if this.requiredItems.length}}
            <div class="checklist-section required-section">
              <h5>Required Items</h5>
              <p class="section-description">All required items must be checked to approve this permit.</p>
              
              {{#each this.requiredItems as |item|}}
                <div class="checklist-item required">
                  <label class="checkbox-label">
                    <input 
                      type="checkbox" 
                      checked={{has item.id this.checkedItems}}
                      {{on "change" (fn this.toggleChecklistItem item.id)}}
                    />
                    <span class="checkmark"></span>
                    <span class="item-text">{{item.label}}</span>
                    <span class="required-indicator">*</span>
                  </label>
                </div>
              {{/each}}
            </div>
          {{/if}}
          
          {{#if this.optionalItems.length}}
            <div class="checklist-section optional-section">
              <h5>Optional Items</h5>
              <p class="section-description">These items are recommended but not required for approval.</p>
              
              {{#each this.optionalItems as |item|}}
                <div class="checklist-item optional">
                  <label class="checkbox-label">
                    <input 
                      type="checkbox" 
                      checked={{has item.id this.checkedItems}}
                      {{on "change" (fn this.toggleChecklistItem item.id)}}
                    />
                    <span class="checkmark"></span>
                    <span class="item-text">{{item.label}}</span>
                  </label>
                </div>
              {{/each}}
            </div>
          {{/if}}
        </div>
        
        <div class="review-notes">
          <h4>Review Notes</h4>
          <textarea 
            class="notes-textarea"
            placeholder="Add any notes about your review (required for rejection)..."
            value={{this.reviewNotes}}
            {{on "input" this.updateReviewNotes}}
          ></textarea>
        </div>
        
        {{#unless this.allRequiredItemsChecked}}
          <div class="validation-message">
            <span class="warning-icon">⚠️</span>
            All required items must be checked before you can approve this permit.
          </div>
        {{/unless}}
      </div>
      
      <div class="modal-footer">
        <div class="action-buttons">
          <button 
            class="btn btn-reject" 
            {{on "click" this.rejectPermit}}
            disabled={{this.isSubmitting}}
          >
            {{#if this.isSubmitting}}
              Submitting...
            {{else}}
              Reject
            {{/if}}
          </button>
          
          <button 
            class="btn btn-approve" 
            {{on "click" this.approvePermit}}
            disabled={{not this.canApprove}}
          >
            {{#if this.isSubmitting}}
              Submitting...
            {{else}}
              Approve
            {{/if}}
          </button>
        </div>
        
        <button class="btn btn-cancel" {{on "click" this.closeModal}}>
          Cancel
        </button>
      </div>
    </div>
  </div>
{{/if}}

<style>
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.approval-modal {
  background: white;
  border-radius: 12px;
  width: 90%;
  max-width: 700px;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 24px;
  border-bottom: 1px solid #e5e7eb;
  background: #f9fafb;
  border-radius: 12px 12px 0 0;
}

.modal-header h3 {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 600;
  color: #1f2937;
}

.close-button {
  background: none;
  border: none;
  font-size: 1.5rem;
  color: #6b7280;
  cursor: pointer;
  padding: 4px;
  border-radius: 4px;
  transition: all 0.2s;
}

.close-button:hover {
  background: #e5e7eb;
  color: #374151;
}

.modal-body {
  padding: 24px;
}

.permit-info {
  margin-bottom: 24px;
  padding: 16px;
  background: #f8fafc;
  border-radius: 8px;
  border: 1px solid #e2e8f0;
}

.permit-info h4 {
  margin: 0 0 12px 0;
  font-size: 1rem;
  font-weight: 600;
  color: #1e293b;
}

.permit-details {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 8px;
}

.detail-item {
  display: flex;
  gap: 8px;
}

.detail-item .label {
  font-weight: 500;
  color: #64748b;
  min-width: 80px;
}

.detail-item .value {
  color: #1e293b;
}

.review-checklist h4 {
  margin: 0 0 16px 0;
  font-size: 1.1rem;
  font-weight: 600;
  color: #1f2937;
}

.checklist-section {
  margin-bottom: 24px;
}

.checklist-section h5 {
  margin: 0 0 8px 0;
  font-size: 1rem;
  font-weight: 600;
  color: #374151;
}

.required-section h5 {
  color: #dc2626;
}

.optional-section h5 {
  color: #059669;
}

.section-description {
  margin: 0 0 12px 0;
  font-size: 0.875rem;
  color: #6b7280;
  font-style: italic;
}

.checklist-item {
  margin-bottom: 8px;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 12px;
  cursor: pointer;
  padding: 8px;
  border-radius: 6px;
  transition: background-color 0.2s;
}

.checkbox-label:hover {
  background: #f3f4f6;
}

.checkbox-label input[type="checkbox"] {
  display: none;
}

.checkmark {
  width: 18px;
  height: 18px;
  border: 2px solid #d1d5db;
  border-radius: 4px;
  position: relative;
  transition: all 0.2s;
  flex-shrink: 0;
}

.checkbox-label input[type="checkbox"]:checked + .checkmark {
  background: #059669;
  border-color: #059669;
}

.checkbox-label input[type="checkbox"]:checked + .checkmark::after {
  content: '✓';
  position: absolute;
  top: -2px;
  left: 2px;
  color: white;
  font-size: 12px;
  font-weight: bold;
}

.required .checkmark {
  border-color: #dc2626;
}

.required .checkbox-label input[type="checkbox"]:checked + .checkmark {
  background: #dc2626;
  border-color: #dc2626;
}

.item-text {
  flex: 1;
  font-size: 0.875rem;
  color: #374151;
}

.required-indicator {
  color: #dc2626;
  font-weight: bold;
}

.review-notes {
  margin-bottom: 20px;
}

.review-notes h4 {
  margin: 0 0 12px 0;
  font-size: 1rem;
  font-weight: 600;
  color: #1f2937;
}

.notes-textarea {
  width: 100%;
  min-height: 80px;
  padding: 12px;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-family: inherit;
  font-size: 0.875rem;
  resize: vertical;
  transition: border-color 0.2s;
}

.notes-textarea:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.validation-message {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px;
  background: #fef3c7;
  border: 1px solid #f59e0b;
  border-radius: 6px;
  color: #92400e;
  font-size: 0.875rem;
}

.warning-icon {
  flex-shrink: 0;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 24px;
  border-top: 1px solid #e5e7eb;
  background: #f9fafb;
  border-radius: 0 0 12px 12px;
}

.action-buttons {
  display: flex;
  gap: 12px;
}

.btn {
  padding: 10px 20px;
  border: none;
  border-radius: 6px;
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
  white-space: nowrap;
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-approve {
  background: #059669;
  color: white;
}

.btn-approve:hover:not(:disabled) {
  background: #047857;
}

.btn-reject {
  background: #dc2626;
  color: white;
}

.btn-reject:hover:not(:disabled) {
  background: #b91c1c;
}

.btn-cancel {
  background: #6b7280;
  color: white;
}

.btn-cancel:hover {
  background: #4b5563;
}
</style>