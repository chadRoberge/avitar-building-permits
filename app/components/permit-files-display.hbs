<div class="permit-files-display">
  <div class="files-header">
    <h3>Permit Files</h3>
    
    {{#if this.hasFiles}}
      <div class="files-summary">
        <span class="file-count">{{this.totalFileCount}} files</span>
        <span class="file-size">{{this.formatFileSize this.totalFileSize}}</span>
      </div>
    {{/if}}
  </div>

  {{#if this.isLoading}}
    <div class="loading-state">
      <div class="loading-spinner"></div>
      <p>Loading files...</p>
    </div>
  {{else if this.loadError}}
    <div class="error-state">
      <span class="error-icon">‚ö†Ô∏è</span>
      <p>{{this.loadError}}</p>
      <button type="button" class="btn btn-primary" {{on "click" this.loadFiles}}>
        Retry
      </button>
    </div>
  {{else if this.hasFiles}}
    {{! Files List }}
    <div class="files-list">
      {{#each this.files as |file|}}
        <div class="file-item">
          <div class="file-main-info" {{on "click" (fn this.toggleFileDetails file._id)}}>
            <div class="file-icon">{{this.getFileIcon file.mimetype}}</div>
            <div class="file-details">
              <div class="file-name">{{file.originalName}}</div>
              <div class="file-meta">
                <span class="file-type-badge">{{if file.fileType file.fileType "Other"}}</span>
                <span class="file-size">{{this.formatFileSize file.size}}</span>
                <span class="upload-date">{{this.formatDate file.uploadDate}}</span>
              </div>
              {{#if file.description}}
                <div class="file-description">{{file.description}}</div>
              {{/if}}
            </div>
            <div class="file-actions">
              <button 
                type="button" 
                class="btn btn-sm btn-primary download-btn"
                {{on "click" (fn this.downloadFile file)}}
                title="Download/View File"
              >
                üì• Download
              </button>
              {{#if (this.canDeleteFile file)}}
                <button 
                  type="button" 
                  class="btn btn-sm btn-danger delete-btn"
                  {{on "click" (fn this.deleteFile file)}}
                  title="Delete File"
                >
                  üóëÔ∏è
                </button>
              {{/if}}
            </div>
          </div>

          {{! Expanded Details }}
          {{#if (this.isFileExpanded file._id)}}
            <div class="file-expanded-details">
              <div class="detail-grid">
                <div class="detail-item">
                  <span class="detail-label">Uploaded by:</span>
                  <span class="detail-value">
                    {{file.uploadedBy.firstName}} {{file.uploadedBy.lastName}}
                    <span class="user-type">({{file.uploadedBy.userType}})</span>
                  </span>
                </div>
                <div class="detail-item">
                  <span class="detail-label">File type:</span>
                  <span class="detail-value">{{file.mimetype}}</span>
                </div>
                <div class="detail-item">
                  <span class="detail-label">Status:</span>
                  <span class="detail-value">
                    <span class="status-badge {{file.status}}">{{file.status}}</span>
                  </span>
                </div>
                {{#if file.version}}
                  <div class="detail-item">
                    <span class="detail-label">Version:</span>
                    <span class="detail-value">{{file.version}}</span>
                  </div>
                {{/if}}
                {{#if file.reviewedBy}}
                  <div class="detail-item">
                    <span class="detail-label">Reviewed by:</span>
                    <span class="detail-value">
                      {{file.reviewedBy.firstName}} {{file.reviewedBy.lastName}}
                      {{#if file.reviewDate}}
                        on {{this.formatDate file.reviewDate}}
                      {{/if}}
                    </span>
                  </div>
                {{/if}}
                {{#if file.reviewNotes}}
                  <div class="detail-item full-width">
                    <span class="detail-label">Review notes:</span>
                    <span class="detail-value">{{file.reviewNotes}}</span>
                  </div>
                {{/if}}
              </div>
            </div>
          {{/if}}
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="empty-state">
      <div class="empty-icon">üìÅ</div>
      <h4>No files uploaded</h4>
      <p>Upload files using the form above to attach documents to this permit.</p>
    </div>
  {{/if}}
</div>

<style>
.permit-files-display {
  background: white;
  border: 1px solid #e9ecef;
  border-radius: 8px;
  overflow: hidden;
}

.files-header {
  padding: 16px 20px;
  border-bottom: 1px solid #e9ecef;
  background: #f8f9fa;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.files-header h3 {
  margin: 0;
  color: #333;
  font-size: 1.1em;
}

.files-summary {
  display: flex;
  gap: 16px;
  font-size: 14px;
  color: #666;
}

.file-count::before {
  content: "üìä ";
}

.file-size::before {
  content: "üíæ ";
}

.loading-state,
.error-state,
.empty-state {
  padding: 40px 20px;
  text-align: center;
  color: #666;
}

.loading-spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #f3f3f3;
  border-top: 3px solid var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 16px;
}

.error-icon,
.empty-icon {
  font-size: 3em;
  margin-bottom: 16px;
}


.files-list {
  max-height: 400px;
  overflow-y: auto;
}

.file-item {
  border-bottom: 1px solid #f0f0f0;
}

.file-item:last-child {
  border-bottom: none;
}

.file-main-info {
  padding: 16px 20px;
  display: flex;
  align-items: center;
  gap: 12px;
  cursor: pointer;
  transition: background-color 0.2s;
}

.file-main-info:hover {
  background: #f8f9fa;
}

.file-icon {
  font-size: 24px;
  flex-shrink: 0;
}

.file-details {
  flex: 1;
  min-width: 0;
}

.file-name {
  font-weight: 500;
  color: #333;
  margin-bottom: 4px;
  word-break: break-all;
}

.file-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  font-size: 12px;
  color: #666;
  margin-bottom: 4px;
}

.file-type-badge {
  background: #e9ecef;
  padding: 2px 6px;
  border-radius: 3px;
  font-weight: 500;
}

.file-description {
  font-size: 13px;
  color: #666;
  font-style: italic;
}

.file-actions {
  display: flex;
  gap: 8px;
  flex-shrink: 0;
}

.download-btn,
.delete-btn {
  padding: 6px 12px;
  border: none;
  border-radius: 4px;
  font-size: 12px;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 4px;
}

.download-btn {
  background: var(--color-primary);
  color: white;
}

.download-btn:hover {
  background: #0056b3;
}

.delete-btn {
  background: #dc3545;
  color: white;
}

.delete-btn:hover {
  background: #c82333;
}

.file-expanded-details {
  padding: 16px 20px;
  background: #f8f9fa;
  border-top: 1px solid #e9ecef;
}

.detail-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 12px;
}

.detail-item.full-width {
  grid-column: 1 / -1;
}

.detail-label {
  font-weight: 500;
  color: #555;
  margin-right: 8px;
}

.detail-value {
  color: #333;
}

.user-type {
  font-size: 11px;
  color: #666;
  text-transform: capitalize;
}

.status-badge {
  padding: 2px 6px;
  border-radius: 3px;
  font-size: 11px;
  font-weight: 500;
  text-transform: capitalize;
}

.status-badge.uploaded {
  background: #fff3cd;
  color: #856404;
}

.status-badge.processing {
  background: #cce5ff;
  color: #004085;
}

.status-badge.approved {
  background: #d4edda;
  color: #155724;
}

.status-badge.rejected {
  background: #f8d7da;
  color: #721c24;
}

.status-badge.archived {
  background: #e2e3e5;
  color: #383d41;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

@media (max-width: 768px) {
  .files-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }
  
  .files-summary {
    align-self: stretch;
    justify-content: space-between;
  }
  
  .file-main-info {
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }
  
  .file-actions {
    align-self: stretch;
    justify-content: flex-end;
  }
  
  .detail-grid {
    grid-template-columns: 1fr;
  }
}
</style>