<form class="auth-form signup-form" {{on "submit" this.handleSubmit}}>
  <h2>Create Account</h2>
  
  {{#if this.errorMessage}}
    <div class="error-message">{{this.errorMessage}}</div>
  {{/if}}

  <div class="form-section">
    <h3>Personal Information</h3>
    
    <div class="form-row">
      <div class="form-group">
        <label for="signup-firstname">First Name *</label>
        <input
          id="signup-firstname"
          type="text"
          value={{this.firstName}}
          {{on "input" (fn this.updateField "firstName")}}
          placeholder="Enter your first name"
          required
          disabled={{this.isLoading}}
        />
      </div>

      <div class="form-group">
        <label for="signup-lastname">Last Name *</label>
        <input
          id="signup-lastname"
          type="text"
          value={{this.lastName}}
          {{on "input" (fn this.updateField "lastName")}}
          placeholder="Enter your last name"
          required
          disabled={{this.isLoading}}
        />
      </div>
    </div>

    <div class="form-group">
      <label for="signup-email">Email Address *</label>
      <input
        id="signup-email"
        type="email"
        value={{this.email}}
        {{on "input" (fn this.updateField "email")}}
        placeholder="Enter your email"
        required
        disabled={{this.isLoading}}
      />
    </div>

    <div class="form-group">
      <label for="signup-phone">Phone Number</label>
      <input
        id="signup-phone"
        type="tel"
        value={{this.phone}}
        {{on "input" (fn this.updateField "phone")}}
        placeholder="(555) 123-4567"
        disabled={{this.isLoading}}
      />
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="signup-password">Password *</label>
        <input
          id="signup-password"
          type="password"
          value={{this.password}}
          {{on "input" (fn this.updateField "password")}}
          placeholder="Enter password (min 6 characters)"
          required
          disabled={{this.isLoading}}
        />
      </div>

      <div class="form-group">
        <label for="signup-confirm-password">Confirm Password *</label>
        <input
          id="signup-confirm-password"
          type="password"
          value={{this.confirmPassword}}
          {{on "input" (fn this.updateField "confirmPassword")}}
          placeholder="Confirm your password"
          required
          disabled={{this.isLoading}}
        />
      </div>
    </div>
  </div>

  <div class="form-section">
    <h3>Municipality Information</h3>
    
    <div class="form-group">
      <label for="municipality-name">Municipality Name *</label>
      <input
        id="municipality-name"
        type="text"
        value={{this.municipalityName}}
        {{on "input" (fn this.updateField "municipalityName")}}
        placeholder="Enter municipality name"
        required
        disabled={{this.isLoading}}
      />
    </div>

    <div class="form-group">
      <label for="municipality-address">Address</label>
      <input
        id="municipality-address"
        type="text"
        value={{this.municipalityAddress}}
        {{on "input" (fn this.updateField "municipalityAddress")}}
        placeholder="Street address"
        disabled={{this.isLoading}}
      />
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="municipality-city">City</label>
        <input
          id="municipality-city"
          type="text"
          value={{this.municipalityCity}}
          {{on "input" (fn this.updateField "municipalityCity")}}
          placeholder="City"
          disabled={{this.isLoading}}
        />
      </div>

      <div class="form-group">
        <label for="municipality-state">State</label>
        <input
          id="municipality-state"
          type="text"
          value={{this.municipalityState}}
          {{on "input" (fn this.updateField "municipalityState")}}
          placeholder="State"
          disabled={{this.isLoading}}
        />
      </div>

      <div class="form-group">
        <label for="municipality-zip">ZIP Code</label>
        <input
          id="municipality-zip"
          type="text"
          value={{this.municipalityZip}}
          {{on "input" (fn this.updateField "municipalityZip")}}
          placeholder="ZIP Code"
          disabled={{this.isLoading}}
        />
      </div>
    </div>

    <div class="form-group">
      <label for="municipality-county">County</label>
      <input
        id="municipality-county"
        type="text"
        value={{this.municipalityCounty}}
        {{on "input" (fn this.updateField "municipalityCounty")}}
        placeholder="County"
        disabled={{this.isLoading}}
      />
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="municipality-phone">Municipality Phone</label>
        <input
          id="municipality-phone"
          type="tel"
          value={{this.municipalityPhone}}
          {{on "input" (fn this.updateField "municipalityPhone")}}
          placeholder="(555) 123-4567"
          disabled={{this.isLoading}}
        />
      </div>

      <div class="form-group">
        <label for="municipality-email">Municipality Email</label>
        <input
          id="municipality-email"
          type="email"
          value={{this.municipalityEmail}}
          {{on "input" (fn this.updateField "municipalityEmail")}}
          placeholder="contact@municipality.gov"
          disabled={{this.isLoading}}
        />
      </div>
    </div>

    <div class="form-group">
      <label for="municipality-website">Municipality Website</label>
      <input
        id="municipality-website"
        type="url"
        value={{this.municipalityWebsite}}
        {{on "input" (fn this.updateField "municipalityWebsite")}}
        placeholder="https://www.municipality.gov"
        disabled={{this.isLoading}}
      />
    </div>
  </div>

  <button 
    type="submit" 
    class="submit-btn"
    disabled={{this.isLoading}}
  >
    {{#if this.isLoading}}
      Creating Account...
    {{else}}
      Create Account
    {{/if}}
  </button>

  <div class="form-footer">
    <p><small>* Required fields</small></p>
  </div>
</form>