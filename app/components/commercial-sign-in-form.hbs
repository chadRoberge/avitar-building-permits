<form class="auth-form commercial-signin-form" {{on "submit" this.handleSubmit}}>
  <h2>Commercial Sign In</h2>
  <p class="form-subtitle">Access your commercial account to manage permits across municipalities</p>
  
  {{#if this.errorMessage}}
    <div class="error-message">{{this.errorMessage}}</div>
  {{/if}}

  <div class="form-group">
    <label for="commercial-email">Business Email Address</label>
    <input
      id="commercial-email"
      type="email"
      value={{this.email}}
      {{on "input" this.updateEmail}}
      placeholder="Enter your business email"
      required
      disabled={{this.isLoading}}
    />
  </div>

  <div class="form-group">
    <label for="commercial-password">Password</label>
    <input
      id="commercial-password"
      type="password"
      value={{this.password}}
      {{on "input" this.updatePassword}}
      placeholder="Enter your password"
      required
      disabled={{this.isLoading}}
    />
  </div>

  <button 
    type="submit" 
    class="submit-btn"
    disabled={{this.isLoading}}
  >
    {{#if this.isLoading}}
      Signing In...
    {{else}}
      Sign In to Commercial Portal
    {{/if}}
  </button>

  <div class="form-footer">
    <p><small>Don't have a commercial account? Switch to "Sign Up" above to create one.</small></p>
  </div>
</form>