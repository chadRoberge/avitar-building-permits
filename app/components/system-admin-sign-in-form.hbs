<form class="auth-form system-admin-signin-form" {{on "submit" this.handleSubmit}}>
  {{#if this.errorMessage}}
    <div class="error-message">{{this.errorMessage}}</div>
  {{/if}}

  <div class="form-section">
    <div class="admin-notice">
      <div class="admin-icon">ðŸ”’</div>
      <div class="admin-text">
        <h3>System Administrator Access</h3>
        <p>This area is restricted to system administrators only.</p>
      </div>
    </div>

    <div class="form-group">
      <label for="admin-email">Administrator Email</label>
      <input
        id="admin-email"
        type="email"
        value={{this.email}}
        {{on "input" this.updateEmail}}
        placeholder="Enter your admin email"
        required
        disabled={{this.isLoading}}
      />
    </div>

    <div class="form-group">
      <label for="admin-password">Administrator Password</label>
      <input
        id="admin-password"
        type="password"
        value={{this.password}}
        {{on "input" this.updatePassword}}
        placeholder="Enter your admin password"
        required
        disabled={{this.isLoading}}
      />
    </div>
  </div>

  <button 
    type="submit" 
    class="submit-btn admin-submit-btn"
    disabled={{this.isLoading}}
  >
    {{#if this.isLoading}}
      Verifying Access...
    {{else}}
      Access System Admin Portal
    {{/if}}
  </button>
</form>