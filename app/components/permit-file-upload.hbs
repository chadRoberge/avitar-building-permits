<div class="permit-file-upload">
  <h3>Upload Files</h3>
  
  {{! File Type and Description }}
  <div class="upload-options">
    <div class="file-type-selector">
      <label for="file-type">File Type:</label>
      <select id="file-type" value={{this.selectedFileType}} {{on "change" this.updateFileType}}>
        {{#each this.fileTypes as |type|}}
          <option value={{type.value}}>{{type.label}}</option>
        {{/each}}
      </select>
    </div>
    
    <div class="file-description">
      <label for="file-description">Description (optional):</label>
      <input 
        type="text" 
        id="file-description" 
        placeholder="Brief description of the files"
        value={{this.fileDescription}}
        {{on "input" this.updateDescription}}
      >
    </div>
  </div>

  {{! Drag and Drop Area }}
  <div class="file-drop-zone {{if this.isDragOver 'drag-over'}}"
       {{on "dragover" this.handleDragOver}}
       {{on "dragleave" this.handleDragLeave}}
       {{on "drop" this.handleDrop}}>
    
    <div class="drop-zone-content">
      <div class="upload-icon">üìé</div>
      <p class="drop-text">
        Drag and drop files here
      </p>
      <div class="drop-zone-buttons">
        <label class="btn btn-outline-primary file-input-label">
          üìÅ Choose Files
          <input 
            type="file" 
            multiple 
            accept={{this.allowedExtensions}}
            class="file-input"
            {{on "change" this.handleFileSelect}}
          >
        </label>
      </div>
      <p class="upload-limits">
        Maximum 5 files, 10MB each<br>
        Allowed: Images, PDF, Word, Excel, Text, ZIP
      </p>
    </div>
  </div>

  {{! Selected Files List }}
  {{#if this.hasSelectedFiles}}
    <div class="selected-files">
      <h4>Selected Files ({{this.files.length}}/5)</h4>
      <ul class="file-list">
        {{#each this.files as |fileObj|}}
          <li class="file-item">
            <div class="file-info">
              <span class="file-name">{{fileObj.name}}</span>
              <span class="file-size">{{this.formatFileSize fileObj.size}}</span>
            </div>
            <button 
              type="button" 
              class="remove-file-btn"
              {{on "click" (fn this.removeFile fileObj.id)}}
              disabled={{this.isUploading}}
            >
              ‚úï
            </button>
          </li>
        {{/each}}
      </ul>
    </div>
  {{/if}}

  {{! Upload Controls }}
  <div class="upload-controls">
    <button 
      type="button" 
      class="btn btn-primary upload-btn"
      {{on "click" this.uploadFiles}}
      disabled={{not this.canUpload}}
      title={{if this.hasSelectedFiles "Upload selected files" "Please select files first"}}
    >
      {{#if this.isUploading}}
        <span class="loading-spinner"></span>
        Uploading...
      {{else if this.hasSelectedFiles}}
        üì§ Upload Files ({{this.files.length}})
      {{else}}
        üì§ Upload Files
      {{/if}}
    </button>
    
    {{#if this.hasSelectedFiles}}
      <button 
        type="button" 
        class="btn btn-secondary clear-btn"
        {{on "click" this.clearFiles}}
        disabled={{this.isUploading}}
      >
        üóëÔ∏è Clear All
      </button>
    {{/if}}
  </div>

  {{! Messages }}
  {{#if this.uploadError}}
    <div class="upload-message error">
      <span class="message-icon">‚ö†Ô∏è</span>
      {{this.uploadError}}
    </div>
  {{/if}}

  {{#if this.uploadSuccess}}
    <div class="upload-message success">
      <span class="message-icon">‚úÖ</span>
      {{this.uploadSuccess}}
    </div>
  {{/if}}
</div>

