{{page-title (concat @model.name " - Building Permits Portal")}}

<div class="municipal-portal-container">
  <header class="avitar-header">
    <div class="container">
      <div class="row items-center">
        <div class="col-md-8">
          <div class="header-brand d-flex items-center mb-2">
            <div class="brand-icon">🏛️</div>
            <div class="brand-content">
              <h1 class="brand-title">{{@model.name}}</h1>
              <p class="brand-subtitle">{{@model.city}}, {{@model.state}} {{@model.zip}}</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 text-right">
          <div class="header-actions">
            <a href="/" class="btn btn-outline-secondary btn-sm">
              ← Choose Different Municipality
            </a>
          </div>
        </div>
      </div>
    </div>
  </header>

  <main class="main-content">
    <div class="container">
      <div class="welcome-section text-center mb-5">
        <h2 class="text-primary mb-3">Welcome to {{@model.name}} Building Permits Portal</h2>
        <p class="text-muted lead">Please select your user type to continue</p>
      </div>

      <div class="row justify-center mb-5">
        <div class="col-lg-10">
          <div class="row">
            <div class="col-md-6 mb-4">
              <div class="user-type-card residential-card card h-100 shadow" {{on "click" (fn this.selectUserType "residential")}}>
                <div class="card-body text-center p-4">
                  <div class="card-icon mb-3">🏠</div>
                  <h3 class="text-primary mb-2">Residential Owner</h3>
                  <p class="text-muted mb-3">Homeowners and residential property owners</p>
                  <ul class="list-unstyled text-left mb-4">
                    <li class="mb-2"><span class="text-success">✓</span> Apply for residential permits</li>
                    <li class="mb-2"><span class="text-success">✓</span> Track application status</li>
                    <li class="mb-2"><span class="text-success">✓</span> Upload required documents</li>
                    <li class="mb-2"><span class="text-success">✓</span> Schedule inspections</li>
                  </ul>
                  <button type="button" class="btn btn-primary w-100">Continue as Residential Owner</button>
                </div>
              </div>
            </div>

            <div class="col-md-6 mb-4">
              <div class="user-type-card commercial-card card h-100 shadow" {{on "click" (fn this.selectUserType "commercial")}}>
                <div class="card-body text-center p-4">
                  <div class="card-icon mb-3">🏢</div>
                  <h3 class="text-primary mb-2">Commercial Business</h3>
                  <p class="text-muted mb-3">Businesses and commercial property developers</p>
                  <ul class="list-unstyled text-left mb-4">
                    <li class="mb-2"><span class="text-success">✓</span> Apply for commercial permits</li>
                    <li class="mb-2"><span class="text-success">✓</span> Manage multiple projects</li>
                    <li class="mb-2"><span class="text-success">✓</span> Business license integration</li>
                    <li class="mb-2"><span class="text-success">✓</span> Contractor management</li>
                  </ul>
                  <button type="button" class="btn btn-primary w-100">Continue as Commercial Business</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row justify-center mb-4">
        <div class="col-lg-8">
          <div class="municipal-staff-info card bg-light">
            <div class="card-body text-center p-4">
              <h4 class="text-primary mb-3">Municipal Staff Access</h4>
              <p class="text-muted mb-3">Municipal staff accounts are created and managed by your municipality's administrators. If you are a municipal employee and need access, please contact your IT administrator or building department supervisor.</p>
              <p class="mb-0">
                <strong>Municipal staff sign-in:</strong> 
                <button type="button" class="btn btn-link p-0 ml-1" {{on "click" this.goToMunicipalStaffPortal}}>Admin Portal</button>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="row justify-center">
        <div class="col-lg-8">
          <div class="additional-info card">
            <div class="card-body">
              <h4 class="text-primary mb-3 text-center">Need Help?</h4>
              <p class="text-center text-muted mb-3">Contact {{@model.name}} Building Department:</p>
              <div class="row">
                <div class="col-md-4 text-center mb-3">
                  <div class="contact-item">
                    <div class="contact-icon mb-2">📞</div>
                    <div class="contact-label font-weight-medium">Phone</div>
                    <div class="contact-value">(603) 555-0123</div>
                  </div>
                </div>
                <div class="col-md-4 text-center mb-3">
                  <div class="contact-item">
                    <div class="contact-icon mb-2">📧</div>
                    <div class="contact-label font-weight-medium">Email</div>
                    <div class="contact-value">permits@{{@model.city}}.nh.gov</div>
                  </div>
                </div>
                <div class="col-md-4 text-center mb-3">
                  <div class="contact-item">
                    <div class="contact-icon mb-2">🕒</div>
                    <div class="contact-label font-weight-medium">Hours</div>
                    <div class="contact-value">Mon-Fri 8:00 AM - 4:30 PM</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>